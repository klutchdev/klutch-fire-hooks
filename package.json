{
  "name": "klutch-fire-hooks",
  "version": "0.0.2",
  "description": "React Hooks for Firebase",
  "files": [
    "auth/dist/*.js",
    "auth/dist/auth",
    "auth/dist/util",
    "auth/dist/*.js.flow",
    "auth/package.json",
    "dist/*.js",
    "dist/*.js.map",
    "firestore/dist/*.js",
    "firestore/dist/firestore",
    "firestore/dist/util",
    "firestore/dist/*.js.flow",
    "firestore/package.json",
    "storage/dist/*.js",
    "storage/dist/storage",
    "storage/dist/util",
    "storage/dist/*.js.flow",
    "storage/package.json"
  ],
  "scripts": {
    "build": "npm run clean && rollup -c",
    "clean": "rimraf ./dist ./auth/dist ./auth/*.d.ts ./firestore/dist ./firestore/*.d.ts ./storage/dist ./storage/*.d.ts ./util/*.d.ts",
    "dev": "npm run clean && rollup -c -w",
    "prepublish": "npm run build",
    "prettier": "prettier --check .",
    "start": "rollup -c -w"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.2",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@types/react": "^17.0.0",
    "firebase": "^9.0.0-beta.7",
    "path": "^0.12.7",
    "prettier": "2.3.2",
    "react": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "2.55.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "0.30.0",
    "typescript": "4.3.5"
  },
  "peerDependencies": {
    "firebase": ">= 8.0.0",
    "react": ">= 16.8.0"
  },
  "typings": "index.d.ts"
}